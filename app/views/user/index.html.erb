<div class="data">
    <p>Profile Details</p>
    <img id="pic" class="img-circle" width="100" height="100"/>
    <p>Email Address</p>
    <p id="email" class="alert alert-danger"></p>
    <button onclick="signOut()" class="btn btn-danger">Signout</button>
</div>
<style>
    .data {
        display: none;
    }
</style>


<div class="user">
    <div class="user-profile">
        <%= if current_user.avatar ==nil then
          image_tag(current_user.avatar.fallback)
        else
          image_tag(current_user.avatar.url(:thumb))
        end %>
        
        
        <div class="user-profile-content">
            <h1><%=if current_user.age ==nil then "미입력"  else current_user.age end%></h1>
            
            <h2><%=if current_user.name ==nil then "미입력"  else current_user.name end%></h2>
            <h3><%=if current_user.email ==nil then "미입력"  else current_user.email end%></h3>
        
        
        </div>
        <div class="user-profile-content-box">
            <div class="modi">
                <%= link_to "수정하기", edit_user_registration_path %>
            </div>
            <div class="like">
             <%= image_tag("heart.svg")%>
            </div>
        </div>
    </div>
    <div class="user-profile-action">
    </div>
    <div class="user-profile-mypost">
    </div>
    <div class="user-profile-tagpost">
    </div>
</div>


<script>
  $("body").css({"background-color": "rgb(100, 33, 33)"});

  </script>